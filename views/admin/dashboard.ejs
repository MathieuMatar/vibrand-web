<main class="parent">
  <div class="div1">
    <%= user.name %>
  </div>
  <div class="div4" style="grid-area: 2 / 1 / 5 / 2;
    padding: 10px;">
    <% user.Projects.forEach(project=> { %>
        <a class="project-links" href="<%=user.id%>/project/<%= project.id %>" style="background-color: var(--coral); padding: 10px; margin: 5px; border-radius: 15px;display: -webkit-inline-box; font-size: 13px;">
            <%= project.name %> | <%= project.client_id %>
        </a>

    <% }); %>
  </div>
  <div class="div5" style="font-size: 10px;">
    
  <style>
    .user-info {
      font-family: 'Montserrat', sans-serif;
      font-size: 12px;
      padding: 20px;
      line-height: 1.6;
        color: var(--gray);
    }

    .user-info span {
      font-weight: bold;
        color: var(--coral);
    }
  </style>


<div class="user-info">
    <div><span>id:</span> <%= user.id %></div>
    <div><span>name:</span> <%= user.name %></div>
    <div><span>company:</span> <%= user.company %></div>
    <div><span>position:</span> <%= user.position %></div>
    <div><span>email:</span> <%= user.email %></div>
    <div><span>phone:</span> <%= user.phone %></div>

</div>

  </div>
  <div class="div6">
    <iframe src="/user-tasks/<%= user.id %>" style="border: none; width: 100%; height: 100%;"></iframe>
  </div>
</main>
<head>
  <title>Info</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      font-size: 12px;
      padding: 20px;
      line-height: 1.6;
        color: var(--gray);
    }

    h2 {
      margin-top: 20px;
      font-size: 14px;
      text-transform: uppercase;
      color: var(--coral);
    }

    .label {
      font-weight: bold;
        color: var(--coral);
    }

    .section {
      margin: 0 20px;
      margin-bottom: 15px;
      
    }
  </style>
</head>

<body>
  <div class="section">
    <div><span class="label">Description:</span> <%= project.description %></div>
    <div><span class="label">Client ID:</span> <%= project.client_id %></div>
    <div><span class="label">Start Date:</span> <%= project.start_date %></div>
    <div><span class="label">Deadline:</span> <%= project.deadline %></div>
    <div><span class="label">Status:</span> <%= project.status %></div>
    <div><span class="label">Overview:</span> <%= project.overview %></div>
  </div>

  <div class="section">
    <h2>Employees</h2>
    <% project.Users.forEach((employee, index) => { %>
    <%= employee.name %><%= index < project.Users.length - 1 ? ', ' : '' %>
    <% }); %>
  </div>

  <div class="section">
    <h2>Services</h2>
    <% project.Services.forEach((service, index) => { %>
    <%= service.name %><%= index < project.Services.length - 1 ? ', ' : '' %>
    <% }); %>
  </div>

</body>